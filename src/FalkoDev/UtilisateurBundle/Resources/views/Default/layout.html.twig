<!DOCTYPE html>
<html>
	<head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Application test</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/falkodevutilisateur/css/bootstrap/bootstrap.min.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/falkodevutilisateur/css/style.css') }}" type="text/css" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
	</head>
	<body>
        
        <!-- Fixed navbar -->
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand">Utilisateurs</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><a href="{{ path('liste') }}">Liste</a></li>
                <li><a href="{{ path('creerUtilisateur') }}">Créer</a></li>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>
        
        <div class="container theme-showcase" role="main">
          <div class="page-header" >
            <h1>Test Symfony2</h1>
          </div>
             {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="alert alert-info">
                    {{ flashMessage }}
                    <a class="close" data-dismiss="alert">×</a>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                    <a class="close" data-dismiss="alert">×</a>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('warning') %}
                <div class="alert alert-warning">
                    {{ flashMessage }}
                    <a class="close" data-dismiss="alert">×</a>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('danger') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                    <a class="close" data-dismiss="alert">×</a>
                </div>
            {% endfor %}
            
            {% if form is defined and not form.vars.valid %}
                <div class="alert alert-danger">
                    Au moins une erreur dans le formulaire est à corriger avant de le valider
                    <a class="close" data-dismiss="alert">×</a>
                </div>
            {% endif %}
            
            {% block body %}{% endblock %}
        </div> <!-- /container -->
        <footer class="footer">
          <div class="container">
            <p class="text-muted"><b>FalkoDev</b> - Test développement - {{ "now"|date("Y") }}</p>
          </div>
        </footer>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script src="{{ asset('bundles/falkodevutilisateur/js/bootstrap/bootstrap.min.js') }}"></script>
        {% endblock %}
	</body>
</html>