{% extends 'FalkoDevUtilisateurBundle:Default:layout.html.twig' %}
    {% block body %}
 
          <div class="page-header">
            <h1>Liste utilisateurs</h1>
            {% if utilisateurs|length > 0 %}
                <table class="table table-bordered table-striped">
                    <tr><th>Civilité</th><th>Nom</th><th>Prénom</th><th>Mail</th><th>Adresse</th><th>Code postal</th><th>Ville</th><th></th></tr>
                    {% for utilisateur in utilisateurs %}
                        <tr><td>{{ utilisateur.civilite}}</td>
                            <td>{{ utilisateur.nom}}</td>
                            <td>{{ utilisateur.prenom}}</td>
                            <td>{{ utilisateur.mail}}</td>
                            <td>{{ utilisateur.adresse}}</td>
                            <td>{{ utilisateur.codePostal}}</td>
                            <td>{{ utilisateur.ville}}</td>
                            <td><a href="{{ path('modifierUtilisateur', {'id':utilisateur.id}) }}" class="btn btn-primary">Modifier</a></td></tr>
                    {% endfor %}
                </table>
            {% else %}
              Aucun utilisateur créé<br><br>
            {% endif %}
            <a href="{{ path('creerUtilisateur') }}" class="btn btn-primary">Créer</a>
          </div>
    {% endblock %}

